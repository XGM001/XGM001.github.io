    <title>差模电感与共模电感</title>
    <link href="https://goupos.top/2023/03/11/%E7%A1%AC%E4%BB%B6%E5%BC%80%E5%8F%91/%E7%A1%AC%E4%BB%B6%E8%AE%BE%E8%AE%A1/%E5%B7%AE%E6%A8%A1%E7%94%B5%E6%84%9F%E4%B8%8E%E5%85%B1%E6%A8%A1%E7%94%B5%E6%84%9F/"/>
    <id>https://goupos.top/2023/03/11/%E7%A1%AC%E4%BB%B6%E5%BC%80%E5%8F%91/%E7%A1%AC%E4%BB%B6%E8%AE%BE%E8%AE%A1/%E5%B7%AE%E6%A8%A1%E7%94%B5%E6%84%9F%E4%B8%8E%E5%85%B1%E6%A8%A1%E7%94%B5%E6%84%9F/</id>
    <published>2023-03-11T00:10:27.000Z</published>
